  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run watch:css\" \"npm run watch:js\" \"npm run serve\"",
    "watch:css": "npx @tailwindcss/cli -i ./src/styles/tailwind.css -o ./public/dist/app.css --watch",
    "watch:js": "esbuild src/scripts/app.js --bundle --outfile=public/dist/app.js --watch",
    "serve": "php -S localhost:8000 -t public",
    "build:css": "npx @tailwindcss/cli -i ./src/styles/tailwind.css -o ./public/dist/app.css --minify",
    "build:js": "esbuild src/scripts/app.js --bundle --minify --outfile=public/dist/app.js",
    "build": "npm run build:css && npm run build:js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
